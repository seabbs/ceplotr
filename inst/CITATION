citHeader("To cite ceplotr in publications use:")

citEntry(entry = "Article",
  title        = "ceplotr",
  author       = personList(as.person("Sam Abbott")),
  journal      = "",
  year         = "2019",
  volume       = "",
  number       = "",
  pages        = "",
  doi          = "",

  textVersion  =
  paste("Sam Abbott (2019).",
        "ceplotr",
        "",
        "")
)